# Development Environment Configuration Example
# Copy this file to .env.development and update with your values

NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database Configuration
# Database Type (postgres or sqlite)
DB_TYPE=postgres

# PostgreSQL Configuration (for Docker setup)
DB_HOST=postgres  # Use 'localhost' if running PostgreSQL locally
DB_PORT=5432
DB_NAME=dc_migration
DB_USER=dc_admin
DB_PASSWORD=development_password

# SQLite Configuration (alternative to PostgreSQL)
# DB_TYPE=sqlite
# DB_PATH=./migration.db

# Backup Configuration
DB_BACKUP_PATH=./backups
DB_BACKUP_RETENTION=5

# Development Authentication
JWT_SECRET=development-jwt-secret-change-in-production
SESSION_SECRET=development-session-secret-change-in-production
BCRYPT_ROUNDS=5

# Postmark Email Configuration
POSTMARK_API_TOKEN=your-postmark-api-token-here
POSTMARK_FROM_EMAIL=noreply@yourdomain.com
POSTMARK_FROM_NAME=DC Migration System

# Email Settings
EMAIL_ENABLED=false  # Set to true to enable email sending
DAILY_REPORT_ENABLED=false
DAILY_REPORT_TIME=08:00
REMINDER_ENABLED=false
REMINDER_DAYS_BEFORE_DEADLINE=7,3,1

# SMTP Configuration (for local email testing with Mailhog)
SMTP_HOST=mailhog  # Use 'localhost' if Mailhog is running locally
SMTP_PORT=1025
SMTP_SECURE=false

# System Settings
MIGRATION_DEADLINE=2025-11-20T00:00:00
TIMEZONE=America/Chicago

# Feature Flags
ENABLE_AUTH=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_DAILY_REPORTS=false
ENABLE_LEADERBOARD=true

# Development Logging
LOG_LEVEL=debug
LOG_FILE=./logs/dev.log

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false
ENABLE_DEBUG=true

# pgAdmin Configuration (for docker-compose)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin
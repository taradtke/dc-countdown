# Development Environment Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database Configuration
# Database Type (postgres or sqlite)
DB_TYPE=postgres

# PostgreSQL Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=dc_migration
DB_USER=dc_admin
DB_PASSWORD=development_password

# Legacy SQLite Configuration (kept for reference)
# DB_PATH=./migration.db

# Backup Configuration
DB_BACKUP_PATH=./backups
DB_BACKUP_RETENTION=5

# Development Authentication (simplified)
JWT_SECRET=development-jwt-secret-not-for-production
SESSION_SECRET=development-session-secret
BCRYPT_ROUNDS=5

# Development Email (use Mailhog if running with profile)
POSTMARK_API_TOKEN=39e338c2-e8f7-4e94-a6ba-49aa790316e3
POSTMARK_FROM_EMAIL=countdown@tsr.ai
POSTMARK_FROM_NAME=DC Migration Countdown

# Email Settings (disabled for development by default)
EMAIL_ENABLED=true
DAILY_REPORT_ENABLED=false
DAILY_REPORT_TIME=08:00
REMINDER_ENABLED=false
REMINDER_DAYS_BEFORE_DEADLINE=7,3,1

# Development SMTP (for Mailhog)
SMTP_HOST=smtp.postmarkapp.com
SMTP_PORT=2525
SMTP_SECURE=true

# System Settings
MIGRATION_DEADLINE=2025-11-20T00:00:00
TIMEZONE=America/Chicago

# Feature Flags (customizable for development)
ENABLE_AUTH=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_DAILY_REPORTS=false
ENABLE_LEADERBOARD=true

# Development Logging
LOG_LEVEL=debug
LOG_FILE=./logs/dev.log

# Relaxed Rate Limiting for Development
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false
ENABLE_DEBUG=true